.ui-checkbox
    position relative
    box-shadow 0px 2px 8px rgba(0, 0, 0, 0.2)
    width 27px
    height 27px
    display inline-block
    border-radius 27px
    cursor pointer
    display inline-flex
    justify-content center
    align-items center
    &:hover
        box-shadow 0px 2px 8px rgba(0, 0, 0, 0.2)
    &__element
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        width 100%
        height 100%
        background-color transparent
        cursor pointer
        opacity 0
    &__mark
        width 15px
        height 15px
        background-color #6C7486
        display inline-block
        border-radius 50%
        transition background-color .2s ease-in-out
        pointer-events none
        ^[0]:hover &,
        ^[0]-active &,
        ^[0]:active &,
        ^[0]__element:checked ~ &
            background-color #B1B9CC
